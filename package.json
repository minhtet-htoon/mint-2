{
  "name": "mint-2",
  "version": "0.0.1",
  "description": "An Electron application with Svelte and TypeScript",
  "main": "./out/main/index.js",
  "license": "MIT",
  "author": "Minhtet Htoon",
  "homepage": "https://github.com/minhtet-htoon/mint-2",
  "scripts": {
    "format": "prettier --plugin prettier-plugin-svelte --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.json",
    "typecheck": "npm run typecheck:node",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:linux": "npm run build && electron-builder --linux --config"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/utils": "^2.0.1",
    "@tabler/icons-svelte": "^2.44.0",
    "discord-rich-presence": "^0.0.8",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "glob": "^10.3.10",
    "howler": "^2.2.4",
    "music-metadata": "^7.14.0",
    "theme-change": "^2.5.0"
  },
  "devDependencies": {
    "7zip-bin": "^5.2.0",
    "@electron-toolkit/eslint-config-prettier": "^1.0.1",
    "@electron-toolkit/eslint-config-ts": "^1.0.1",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@sveltejs/vite-plugin-svelte": "^2.5.3",
    "@types/discord-rich-presence": "^0.0.2",
    "@types/howler": "^2.2.11",
    "@types/node": "^18.19.3",
    "@types/play-sound": "^1.1.2",
    "autoprefixer": "^10.4.16",
    "daisyui": "^4.4.24",
    "electron": "^25.9.8",
    "electron-builder": "^24.9.1",
    "electron-vite": "^1.0.29",
    "eslint": "^8.56.0",
    "eslint-plugin-svelte": "^2.35.1",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.2",
    "tailwindcss": "^3.4.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^4.5.1"
  }
}
